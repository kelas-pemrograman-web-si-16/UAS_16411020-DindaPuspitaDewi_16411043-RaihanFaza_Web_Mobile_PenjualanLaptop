include  ../../users/dashboard
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Laptop
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Input Data Laptop
                            // /.box-header
                            // form start
                            form.form-horizontal(method="POST", action='/'+laptops._id + '/editlaptop')
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='kodelaptop') Kode Laptop
                                        .col-sm-10
                                            input#kodelaptop.form-control(type='text' required name="kodelaptop" placeholder='Kode Laptop' value= (kodelaptop == undefined) ? laptops.kodelaptop: kodelaptop)
                                    .form-group
                                        label.col-sm-2.control-label(for='merklaptop') Merk Laptop
                                        .col-sm-10
                                            input#merklaptop.form-control(type='text' name="merklaptop" placeholder='Merk Laptop' value= (merklaptop == undefined) ? laptops.merklaptop: merklaptop)
                                    .form-group
                                        label.col-sm-2.control-label(for='tipelaptop') Tipe Laptop
                                        .col-sm-10
                                            input#tipelaptop.form-control(type='text' name="tipelaptop" placeholder='Tipe laptop' value= (tipelaptop == undefined) ? laptops.tipelaptop: tipelaptop)
                                    .form-group
                                        label.col-sm-2.control-label(for='warna') Warna
                                        .col-sm-10
                                            input#warna.form-control(type='text' name="warna" placeholder='Warna' value= (warna == undefined) ? laptops.warna: warna)
                                    .form-group
                                        label.col-sm-2.control-label(for='harga') Harga
                                        .col-sm-10
                                            input#harga.form-control(type='text' name="harga" placeholder='Harga' value= (harga == undefined) ? laptops.harga: harga)


                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data
                                // /.box-footer

