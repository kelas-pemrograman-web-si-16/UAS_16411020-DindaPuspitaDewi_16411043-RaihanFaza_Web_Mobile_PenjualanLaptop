include  ../../users/dashboard
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Laptop
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Input Data Laptop
                            // /.box-header
                            // form start
                            form.form-horizontal(method="post", action="/inputlaptop", role='form')
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='kodelaptop') Kode Laptop
                                        .col-sm-10
                                            input#kodelaptop.form-control(type='text' required name="kodelaptop" placeholder='Kode Laptop')
                                    .form-group
                                        label.col-sm-2.control-label(for='merklaptop') Merk Laptop
                                        .col-sm-10
                                            input#merklaptop.form-control(type='text' required name="merklaptop" placeholder='Merk Laptop')
                                    .form-group
                                        label.col-sm-2.control-label(for='tipelaptop') Tipe Laptop
                                        .col-sm-10
                                            input#tipelaptop.form-control(type='text' required name="tipelaptop" placeholder='Tipe Laptop')
                                    .form-group
                                        label.col-sm-2.control-label(for='warna') Warna
                                        .col-sm-10
                                            input#warna.form-control(type='text' required name="warna" placeholder='Warna')
                                    .form-group
                                        label.col-sm-2.control-label(for='harga') Harga
                                        .col-sm-10
                                            input#harga.form-control(type='text' required name="harga" placeholder='Harga')


                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data
                                // /.box-footer

